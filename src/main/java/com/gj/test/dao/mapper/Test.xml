<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.gj.test.dao.TestDao">
	<resultMap id="UserMap" type="com.gj.test.beans.Test">
		<result property="id" jdbcType="BIGINT" column="id"/> <!--  id -->
		<result property="userName" jdbcType="VARCHAR" column="userName"/> <!--  userName -->
		<result property="userBirth" jdbcType="DATE" column="userBirth"/> <!--  userBirth -->
		<result property="userEmail" jdbcType="VARCHAR" column="userEmail"/> <!--  userEmail -->
	    <result property="realName" jdbcType="VARCHAR" column="realName"/> <!--  userEmail -->
	    <result property="password" jdbcType="VARCHAR" column="password"/>
	</resultMap>
	<sql id="BaseColumn">
		id,
		userName,
		userBirth,
		userEmail,
		realName,
		password
	</sql>
	<select id="selectById" parameterType="java.lang.Long" resultMap="UserMap">
		SELECT 
			<include refid="BaseColumn" />
		FROM t_user 
		WHERE 
			id = #{id} 
	</select>

	<!-- 按Id删除 -->
	<delete id="delete" parameterType="java.lang.Long">
		DELETE FROM t_user WHERE
		id = #{id} 
	</delete>
	 <!-- 插入 -->
	<insert id="insert" parameterType="com.gj.test.beans.Test" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_user (
			id,
			userName,
			userBirth,
			userEmail,
			realName,
			password
		) VALUES (
			#{id,jdbcType=BIGINT},
			#{userName,jdbcType=VARCHAR},
			#{userBirth,jdbcType=DATE},
			#{userEmail,jdbcType=VARCHAR},
			#{realName,jdbcType=VARCHAR},
			#{password,jdbcType=VARCHAR}
		)
		
	</insert>
	
	<select id="selectBySearch" parameterType="TestSearch" resultMap="UserMap">
		SELECT 
			<include refid="BaseColumn" />
		FROM t_user
		<where>
			<if test="id!=null and id!=''">
				and id = #{id}
			</if>
			<if test="userName!=null and userName!=''">
				and userName = #{userName}
			</if>
			<if test="userBirth!=null and userBirth!=''">
				and userBirth = #{userBirth}
			</if>
			<if test="userEmail!=null and userEmail!=''">
				and userEmail = #{userEmail}
			</if>
			<if test="realName!=null and realName!=''">
				and realName = #{realName}
			</if>
			<if test="password!=null and password!=''">
				and password = #{password}
			</if>
		</where>
	</select>
	
	<!-- 更新 -->
	<update id="update" parameterType="com.gj.test.beans.Test">
		UPDATE t_user 
			<set>
				<if test="userName!=null and userName!=''">
				userName = #{userName,jdbcType=VARCHAR},
				</if>
				<if test="userBirth!=null and userBirth!=''">
				userBirth = #{userBirth,jdbcType=DATE},
				</if>
				<if test="userEmail!=null and userEmail!=''">
				userEmail = #{userEmail,jdbcType=VARCHAR},
				</if>
				<if test="realName!=null and realName!=''">
				userEmail = #{realName,jdbcType=VARCHAR},
				</if>
				<if test="password!=null and password!=''">
				password = #{password,jdbcType=VARCHAR}
				</if>
			</set>
		WHERE 
			id = #{id,jdbcType=BIGINT}
	</update>
	
</mapper>